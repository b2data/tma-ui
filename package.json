    "@types/ramda": "^0.30.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/turndown": "^5.0.5",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "cpx2": "^8.0.0",
    "eslint": "^9.22.0",
